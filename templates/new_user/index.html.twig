{% extends 'base.html.twig' %}

{% block title %}New User Registration{% endblock %}

{% block body %}
<form method="post">
    
    <h1>Please enter your details:</h1>

    <label for="inputName" class="sr-only">Name</label>
    <input type="name" value="{{ name }}" name="name" id="inputName" class="form-control" placeholder="Name" required autofocus>
    <label for="inputEmail" class="sr-only">Email</label>
    <input type="email" value="{{ email }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password"  value="{{ password }}" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    
    <button class="btn btn-lg btn-primary" type="submit">
        Register
    </button>
</form>
{% endblock %}